{
  "name": "xperps-backend",
  "version": "1.0.0",
  "description": "Twitter-controlled perpetual trading platform",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "start:all": "concurrently -n \"API,TWEETS,EXPORTS,DEPOSITS\" -c \"blue,green,yellow,magenta\" \"npm run dev\" \"npm run worker:tweet-listener\" \"npm run worker:export-monitor\" \"npm run worker:deposit-monitor\"",
    "worker:tweet-listener": "ts-node-dev --respawn src/workers/tweet-listener.ts",
    "worker:export-monitor": "ts-node-dev --respawn src/workers/export-monitor.ts",
    "worker:deposit-monitor": "ts-node-dev --respawn src/workers/deposit-monitor.ts",
    "generate-key": "ts-node scripts/generate-key.ts",
    "setup-wallet": "ts-node scripts/setup-platform-wallet.ts"
  },
  "keywords": ["crypto", "trading", "perps", "twitter"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "firebase-admin": "^11.11.0",
    "ethers": "^5.7.2",
    "@noble/ed25519": "^2.0.0",
    "axios": "^1.6.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "concurrently": "^8.2.2"
  }
}
